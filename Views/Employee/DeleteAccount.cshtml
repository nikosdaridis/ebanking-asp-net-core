@model eBanking.ViewModels.AccountViewModel

@{
    ViewData["Title"] = "Delete Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteAccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label">Number</label>
                <input asp-for="Number" class="form-control" type="number" min="0" max="4000000000" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input class="action-btn" type="submit" value="Delete Account" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="menu-btn" asp-action="Index">Back to Dashboard</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
